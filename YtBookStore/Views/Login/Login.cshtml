
@model YtBookStore.Models.UserModel;

@{
    Layout = null;
}



<!DOCTYPE html>
<html>
     <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Book Store</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        a{
            font-family:Verdana, Geneva, Tahoma, sans-serif
        }
        body {
            margin: 0;
            padding: 0;
            background-color: #1F2833;
            height: 100vh;
        }

        #login .container #login-row #login-column #login-box {
            margin-top: 120px;
            max-width: 400px;
            height: 400px;
            border: 1px solid #9C9C9C;
            background-color: #66fcf1;
        }

            #login .container #login-row #login-column #login-box #login-form {
                padding: 20px;
            }

                #login .container #login-row #login-column #login-box #login-form #register-link {
                    margin-top: -85px;
                }
    </style>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
</head>
<body>

    <div id="login" align="Center">
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        @using (Html.BeginForm("Verify", "Login", FormMethod.Post))
                        {
                                <h3 class="text-center text-dark">Login</h3>
                                <div class="form-group">
                                    <label for="username" class="fw-bold" >Username</label><br>
                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "Email", @required = true })
                                </div>
                                <br />
                                <div class="form-group">
                                    <label for="password" class="fw-bold">Password</label><br>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", @required = true })
                                </div>
                                <br />
                                <div class="form-group">
                                        <label for="remember-me" class="fw-bold text-dark"><span>Remember me</span> <span><input id="remember-me" name="remember-me" type="checkbox"></span></label><br>
                                    <br />
                                    <input type="submit" name="submit" class="btn btn-dark btn-md" value="SUBMIT">
                            </div>
                        }
                        @using (Html.BeginForm("User", "Login", FormMethod.Post))
                        {
                             <br />
                              <input type="submit" name="submit" class="btn btn-dark btn-md" value="USER LOGIN">
                        }
                        <div style="color:red;">@ViewBag.message</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>

